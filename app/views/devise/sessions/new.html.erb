<%= render "partial/header" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">

      <% if request.url.include?("admin") %>
        <h2>管理ユーザーログイン</h2>
      <% elsif request.url.include?("user") %>
        <h2>ユーザーログイン</h2>
      <% elsif request.url.include?("compan") %>
        <h2>企業ユーザーログイン</h2>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email,class: "form-control",placeholder: "メールアドレス", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password,class: "form-control",placeholder: "パスワード", autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :接続したままにする %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン",class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
